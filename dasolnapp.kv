        # ids for tab 1
        m1_input: m1_input
        v1_input: v1_input
        m2_input: m2_input
        v2_input: v2_input
        mv_formula: mv_formula
        ratpro: ratpro
        output: output
        formula_numerator: formula_numerator
        formula_line: formula_line
        formula_denominator: formula_denominator
        input_error: input_error
        egg_question_text1: egg_question1
        egg_answer_text1: egg_answer1

        # ids for tab 2
